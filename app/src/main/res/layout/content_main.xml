<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="119dp"
            android:layout_height="114dp" app:srcCompat="@drawable/top_badge"
            android:id="@+id/openRankingVendedores"
            app:layout_constraintTop_toBottomOf="@+id/homeRankingVendedores"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="119dp"
            android:layout_height="114dp" app:srcCompat="@drawable/news"
            android:id="@+id/openNews" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/homeNoticias" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="119dp"
            android:layout_height="114dp" app:srcCompat="@drawable/products"
            android:id="@+id/openProdutos" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/homeProdutos" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Produtos à Venda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeProdutos" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Notícias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeNoticias" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/openProdutos" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Ranking dos Vendedores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeRankingVendedores" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/openNews" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>